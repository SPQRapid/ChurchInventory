<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- TextView (activity_main) -->
    <style name="entry">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">100dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TextView overview (activity_editor). -->
    <style name="overview">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- EditText product name (activity_editor). -->
    <style name="product_name">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:hint">Product name</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- EditText product price (activity_editor). -->
    <style name="product_price">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:inputType">number</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">Product Price</item>
    </style>

    <!-- EditText supplier name (activity_editor). -->
    <style name="supplier_name">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">Supplier Name</item>
    </style>

    <!-- EditText supplier email (activity_editor). -->
    <style name="supplier_email">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">Supplier email</item>
    </style>

    <!-- Button minus (activity_editor). -->
    <style name="button_minus">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- EditText quantity (activity_editor). -->
    <style name="quantity">
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:hint">Quantity</item>
    </style>

    <!-- Button plus (activity_editor). -->
    <style name="button_plus">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button insert image (activity_editor). -->
    <style name="button_insert_image">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">37dp</item>
    </style>

    <!-- ImageView basket (activity_editor). -->
    <style name="image_default">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginTop">17dp</item>
    </style>

    <!-- ImageView product (list_item). -->
    <style name="productImage">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_margin">17dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- TextView overview (list_item). -->
    <style name="productName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">17dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- TextView overview (list_item). -->
    <style name="productQuantity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">17dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ImageView product (list_item). -->
    <style name="productSale">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/sale_special</item>
    </style>

    <!-- TextView product (list_item). -->
    <style name="productPrice">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
